@model IEnumerable<PROJ_SW.Model.Inventory>

@{
    ViewBag.Title = "Index";
}

<h2 style="margin-top:50px">Index</h2>

<p>

    <a href="@Url.Action("Create","Inventories")" class="btn btn-primary" target="_blank">
        <span class="glyphicon glyphicon-plus"> </span>
        Create
    </a>


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.inventory_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.inventory_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.inventory_id }, new { @class = "btn btn-defult" }) |
                @Html.ActionLink("Details", "Details", new { id = item.inventory_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.inventory_id }, new { @class = "btn btn-defult" })
            </td>
        </tr>
    }

</table>
